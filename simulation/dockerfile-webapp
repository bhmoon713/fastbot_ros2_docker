FROM osrf/ros:humble-desktop
ENV DEBIAN_FRONTEND=noninteractive

# Use bash for RUN steps
SHELL ["/bin/bash", "-c"]

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      apt-utils \
      nginx \
      python3-pip \
      python3-colcon-common-extensions \
      python3-setuptools \
      python3-pytest \
      python3-numpy \
      git \
      ros-humble-rosbridge-server \
      ros-humble-web-video-server \
      ros-humble-rosbridge-suite && \
    rm -rf /var/lib/apt/lists/*

RUN apt-get update && apt-get install -y \
    ros-humble-rmw-cyclonedds-cpp \
    ros-humble-cyclonedds

# Create workspace and clone tf2_web_republisher
WORKDIR /ros2_ws/src
# COPY fastbot_webapp/tf2_web_republisher_py /ros2_ws/src/tf2_web_republisher_py

RUN git clone https://github.com/RobotWebTools/tf2_web_republisher.git -b ros2

# Build the workspace
WORKDIR /ros2_ws
RUN . /opt/ros/humble/setup.sh && colcon build

# Source setup on container start
RUN echo "source /opt/ros/humble/setup.bash" >> /root/.bashrc && \
    echo "source /ros2_ws/install/setup.bash" >> /root/.bashrc && \
    echo "cd /ros2_ws" >> /root/.bashrc

# Copy static files (webapp and entrypoint)
COPY fastbot_ros2_docker/simulation/entrypoint.sh /entrypoint.sh
COPY fastbot_webapp/ /var/www/html/
RUN chmod +x /entrypoint.sh

EXPOSE 80 9090 8080

ENTRYPOINT ["/bin/bash"]
CMD ["/entrypoint.sh"]
